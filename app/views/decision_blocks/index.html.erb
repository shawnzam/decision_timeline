<%- model_class = DecisionBlock -%>
<div class="page-header">
  <h1><%=t '.title', :default => DecisionBlock %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:decision_text) %></th>
      <th><%= model_class.human_attribute_name(:value) %></th>
      <th><%= model_class.human_attribute_name(:ordering) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @decision_blocks.each do |decision_block| %>
      <tr>
        <td><%= decision_block.id %></td>
        <td><%= decision_block.decision_text %></td>
        <td><%= decision_block.value %></td>
        <td><%= decision_block.ordering %></td>
        <td><%= decision_block.type %></td>
        <td><%=l decision_block.created_at, format: :long %></td>
        <td>
          <%= link_to decision_block_path(decision_block), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to decision_block_path(decision_block), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_decision_block_path,
            :class => 'btn btn-primary' %>
